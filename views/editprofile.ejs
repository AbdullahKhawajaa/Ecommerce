<% include ./partials/header %>

<div class="container-l px-4 mt-4" style="margin-left: 400px;">
       <div class="col-xl-8">
           <!-- Account details card-->
           <div class="card mb-4">
               <div class="card-header">
                   <center>
                       <h1 style="font-size: 25px;">Account Details</h1>
                   </center>
                </div>
               <div class="card-body">
                   <form action="/users/profile" method="POST" enctype="multipart/form-data">
                       <!-- Form Row-->
                       <div class="card mb-4">
                        <div class="card-header">Profile Picture</div>
                        <div class="card-body text-center">
                            <!-- Profile picture image-->
                            <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                            <!-- Profile picture help block-->
                            <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                            <!-- Profile picture upload button-->
                            <label for="image">Display Picture</label>
                                <input
                                type="file"
                                id="image"
                                name="image"
                                class="form-control"
                                placeholder="Select Picture"
                                value="<%= typeof file != 'undefined' ? file : '' %>"
                                />
                        </div>
                    </div>
                       <div class="row gx-3 mb-3">
                           <!-- Form Group (first name)-->
                           <div class="col-md-6">
                            <label for="fname">First Name</label>
                            <input
                              type="fname"
                              id="fname"
                              name="fname"
                              class="form-control"
                              placeholder="Enter First Name"
                              value="<%= typeof fname != 'undefined' ? fname : '' %>"
                            />
                           </div>
                           <!-- Form Group (last name)-->
                           <div class="col-md-6">
                            <label for="lname">Last Name</label>
                            <input
                              type="lname"
                              id="lname"
                              name="lname"
                              class="form-control"
                              placeholder="Enter Last Name"
                              value="<%= typeof lname != 'undefined' ? lname : '' %>"
                            />
                           </div>
                       </div>
                       <!--Shipping Address-->
                       <div class="mb-3">
                        <label for="address">Shipping Address</label>
                            <input
                            type="address"
                            id="address"
                            name="address"
                            class="form-control"
                            placeholder="Enter your address"
                            value="<%= typeof address != 'undefined' ? address : '' %>"
                            />
                    </div>
                       <!-- Form Row -->
                       <div class="row gx-3 mb-3">
                           <!-- Form Group (organization name)-->
                           <div class="col-md-4">
                            <label for="country">Country</label>
                               <input
                                    type="country"
                                    id="country"
                                    name="country"
                                    class="form-control"
                                    placeholder="Enter your Country"
                                    value="<%= typeof country != 'undefined' ? country : '' %>"
                                />
                           </div>
                           <!-- Form Group (location)-->
                           <div class="col-md-4">
                            <label for="city">City</label>
                            <input
                                type="city"
                                id="city"
                                name="city"
                                class="form-control"
                                placeholder="Enter your city"
                                value="<%= typeof city != 'undefined' ? city : '' %>"
                            />
                           </div>
                           <div class="col-md-4">
                            <label for="email">Email</label>
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="form-control"
                                placeholder="Enter your email"
                                value="<%= typeof email != 'undefined' ? email : '' %>"
                            />
                          </div>
                      </div>
                       <!-- Save changes button-->
                       <button type="submit" class="btn btn-primary btn-block" style="margin-top: 50px;">Save changes</button>
                   </form>
               </div>
           </div>
       </div>
   </div>
</div>


<style>

body{margin-top:20px;
   background-color:#f2f6fc;
   color:#69707a;
   }
   .img-account-profile {
       height: 10rem;
   }
   .rounded-circle {
       border-radius: 50% !important;
   }
   .card {
       box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);
   }
   .card .card-header {
       font-weight: 500;
   }
   .card-header:first-child {
       border-radius: 0.35rem 0.35rem 0 0;
   }
   .card-header {
       padding: 1rem 1.35rem;
       margin-bottom: 0;
       background-color: rgba(33, 40, 50, 0.03);
       border-bottom: 1px solid rgba(33, 40, 50, 0.125);
   }
   .form-control, .dataTable-input {
       display: block;
       width: 100%;
       padding: 0.875rem 1.125rem;
       font-size: 0.875rem;
       font-weight: 400;
       line-height: 1;
       color: #69707a;
