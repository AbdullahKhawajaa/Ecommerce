<% include ./partials/header %>

  <div>
    <div class="laptop">
        <div class="container">
           <div class="row">
              <div class="col-md-6">
                 <div class="titlepage">
                    <p>Every Headphone</p>
                    <h2>Up to 40% off !</h2>
                    <a class="read_more" href="/dashboard/1">Shop Now</a>
                 </div>
              </div>
              <div class="col-md-6">
                 <div class="laptop_box">
                    <figure><img src="https://images.unsplash.com/photo-1581432079854-2f6d5678b478?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Nnx8Z2FtaW5nJTIwaGVhZHBob25lc3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60" alt="#" style="width: 100%; height:100%;"/></figure>
                 </div>
              </div>
           </div>
        </div>
     </div>
     </div>
  </div>

  <div>
     <div class="three_box">
       <div class="container">
          <div class="row">
           <% data.forEach(function(product) { %>
               <% if (product.category === "keyboard" || product.category === "Keyboard" ) { %>
             <div class="col-md-4">
                <div class="box_text">            
                   <i><img src="data:image/<%= product.image.contentType%>;base64,<%= product.image.data.toString('base64')%>"
                      alt="<%- product.name %>" style="width:250px;height:200px;"/></i>
                   <h3><%- product.name %></h3>
                   <p><%- product.description %> </p>
                   <p style="color:green;"><%- product.price %> Rs </p>
                   <button>Add to Cart</button>
                 </div>
             </div>
             <% } %>
           <% }) %>
          </div>
       </div>
    </div>
   </div>

   <div class="center" >
     <% if (pages > 0) { %>
       <div class="center"></div>
       <div class="pagination">
       <% if(current == 1) { %>
       <a class="disabled">&laquo;</a>
       <% } else { %>
       <a href="/mouse/1">&laquo;</a>
       <% } %>
       <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
       <% if (i !== 1) { %>
         <li class="disabled"></li>
       <% } %>
       <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
         <% if (i == current) { %>
           <a class="active"><%= i %></a>
         <% } else { %>
           <a href="/mouse/<%= i %>"><%= i %></a>
         <% } %>
         <% if (i == Number(current) + 4 && i < pages) { %>
           <li class="disabled"></li>
         <% } %>
       <% } %>
       <% if (current == pages) { %>
         <li class="disabled"></li>
       <% } else { %>
         <a href="/mouse/<%= pages %>">&raquo;</a>
       <% } %>
       </div>
     </div>
     <% } %>
   </div>



