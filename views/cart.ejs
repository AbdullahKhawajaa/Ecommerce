<% include ./partials/header %>

<div class="container mt-5 p-3 rounded cart">
    <div class="row no-gutters">
        <div class="col-md-8">
            <div class="product-details mr-2">
                
                <hr>
                <h6 class="mb-0">Shopping cart</h6>
                <% data.forEach(function(product) { %>
                <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
                    <div class="d-flex flex-row"><img class="rounded" src="data:image/<%= product.image.contentType%>;base64,<%= product.image.data.toString('base64')%>" width="40">
                        <div class="ml-2"><span class="font-weight-bold d-block"><%- product.name %></span><span class="spec"><%- product.description %></span></div>
                    </div>
                    <div class="d-flex flex-row align-items-center"><span class="d-block">1</span><span class="d-block ml-5 font-weight-bold"><%- product.price %>Rs</span><i class="fa fa-trash-o ml-3 text-black-50"></i></div>
                </div>
                
            </div>
        </div>
        <div class="col-md-4">
            <div class="payment-info">
                <hr class="line">
                <div class="d-flex justify-content-between information"><span>Subtotal</span><span><%-product.price %></span></div>
                <div class="d-flex justify-content-between information"><span>Total(Incl. taxes)</span><span><%= product.price%>Rs</span></div><a href="/dashboard/1"   class="btn btn-primary btn-block d-flex justify-content-between mt-3" type="button" style="background-color: orange;"><span><%= product.price%>Rs</span><span>Checkout<i class="fa fa-long-arrow-right ml-1"></i></span></a>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<% include ./partials/footer %>

